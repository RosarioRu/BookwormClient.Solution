@using BookwormClient.Models; 
@{
    Layout = "_Layout"; 
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2 clas= "display-3">Take a Look at Users Favorite Selections!</h2>
    <br>
    <div class="row">
        <div class="col-md-4" style="margin:auto;">   
            <div id="carouselExampleControls" class="carousel slide carousel-fade text-center" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/img/StephenKingPetSematary.jpg" class="d-block w-100"   alt="Pet-sematary">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/goodnight-moon.jpg" class="d-block w-100"  alt="goodnight-moon">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/giving-tree.jpg" class="d-block w-100"  alt="giving-tree">
                    </div>
                </div>
            </div>
        </div> 
    </div>
    <br>
    <h2 clas= "display-3">Banned books are the best!</h2>
    <br>
    <div class="row">
        <div class="col-md-4" style="margin:auto;">   
            <div id="carouselExampleControls" class="carousel slide carousel-fade text-center" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/img/all-boys.jpg" class="d-block w-100"   alt="all-boys">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/my-hair.jpg" class="d-block w-100"  alt="my-hair">
