                    </div>
                    <div class="carousel-item">
                        <img src="~/img/out-of-darkness.jpg" class="d-block w-100"  alt="out-of-darkness">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/anne.jpg" class="d-block w-100"  alt="anne">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/proudest-blue.jpg" class="d-block w-100"  alt="proudest-blue">
                    </div>
                    <div class="carousel-item">
                        <img src="~/img/maus.jpg" class="d-block w-100"  alt="maus">
                    </div>
                </div>
            </div>
        </div> 
    </div>
<button>@Html.ActionLink("See Book List", "Index", "Books")</button>
<button>@Html.ActionLink("Create New Book List", "Create", "Books")</button>

</div>
